extends sh 

snippet venv 
	###### VENV ####### 
	# Check if virtual environment is activated
	if [ -z "$VIRTUAL_ENV" ]
	then
			printf "Virtual environment is not activated Use \`${BYellow}pipenv ${BIWhite}shell${NC}\` command. Exiting..."
			exit 1
	fi

